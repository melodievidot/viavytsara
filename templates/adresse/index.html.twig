{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}
{% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("css/feuille.css") }}">
{% endblock %}


{% block body %}

    <h1>Adresse</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fullname</th>
                <th>Adresse1</th>
                <th>Adresse2</th>
                <th>Complement</th>
                <th>Ville</th>
                <th>Code_postal</th>
                <th>Pays</th>
                <th>Telephone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.id }}</td>
                <td>{{ adresse.fullname }}</td>
                <td>{{ adresse.adresse1 }}</td>
                <td>{{ adresse.adresse2 }}</td>
                <td>{{ adresse.complement }}</td>
                <td>{{ adresse.ville }}</td>
                <td>{{ adresse.codePostal }}</td>
                <td>{{ adresse.pays }}</td>
                <td>{{ adresse.telephone }}</td>
                <td>
                    <a href="{{ path('app_adresse_show', {'id': adresse.id}) }}">show</a>
                    <a href="{{ path('app_adresse_edit', {'id': adresse.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adresse_new') }}" class="btn btn-success">Ajouter une nouvelle adresse</a>
{% endblock %}
