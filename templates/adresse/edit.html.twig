{% extends 'base.html.twig' %}

{% block title %}Modifier Adresse{% endblock %}


{% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("css/feuille.css") }}">
{% endblock %}

{% block body %}

<main>
	<div class="container mt-5 mt-lg-5">
<h3 class="text-center"> Adresse </h3>
<div>
<div class="card card-profil-user">
<div class="card-header header-profil-user">
<h4 class="modal-title text-center"> Veuillez modifier votre adresse</h4>
</div>
    {{ form_start(form) }}
    <div class="row">
    <div class="col-md-5">{{ form_row(form.fullname)}} </div>
    <div class="col-md-5">{{ form_row(form.adresse1)}} </div>
    <div class="col-md-5">{{ form_row(form.adresse2)}} </div>
    <div class="col-md-4">{{ form_row(form.complement)}} </div>
    <div class="col-md-4">{{ form_row(form.code_postal)}} </div>
     <div class="col-md-4">{{ form_row(form.ville)}} </div>
    <div class="col-md-4">{{ form_row(form.pays)}} </div>
    <div class="col-md-4">{{ form_row(form.telephone)}} </div>
    
</div>
<div class="mt-4 col-12">
    {{ include('adresse/_form.html.twig', {'button_label': 'Update'}) }}
<a href="{{ path('moncompte') }}" class="btn btn-success">Retour Ã  la liste</a>
