{% extends 'base.html.twig' %}

{% block title %}Créer votre compte{% endblock %}

{% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("css/feuille.css")}}">
{% endblock %}

{% block body %}
<main>
	<main>
		<div class="container mt-5">
			<h3 class="text-center">Votre bien-être est à portée de main, inscrivez-vous!</h3>
			<p class="text-center">Remplissez le formulaire ci-dessous pour accéder aux ventes privées et d'autres avantages</p><br>
			<div class="dropdown-divider"></div>
			<div class="row">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
			<div class="row">
				{{ form_start(registrationForm, { attr: { class: 'p-3 col-12 col-lg-9 was-validated' } }) }}
				{% for flashError in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flashError }}</div>
				{% endfor %}
				<div class="row">
					<div class="col-12 col-lg-6">
						{{ form_row(registrationForm.nom, { label: "Nom" }) }}
						<div id="validationServer01Feedback" class="invalid-feedback">
							Veuillez inscrire votre nom ci-dessus.
						</div>
					</div>
					<div class="col-12 col-lg-6">
						{{ form_row(registrationForm.prenom, { label: "Prénom" }) }}
						<div id="validationServer02Feedback" class="invalid-feedback">
							Veuillez inscrire votre prénom ci-dessus
						</div>
					</div>

					<div class="mt-3 col-md-6">
						{{ form_row(registrationForm.telephone, { label: "Télephone" }) }}
						<div id="validationServer02Feedback" class="invalid-feedback">
							Veuillez inscrire votre téléphone ci-dessus
						</div>
					</div>

					<div class="mt-3 col-md-6">
						{{ form_row(registrationForm.email, { label: "Adresse Email" }) }}
						<div id="email1Feedback" class="invalid-feedback">
							Veuillez inscrire votre Email ci-dessus.
						</div>
					</div>
				</div>
				<div class="mt-3 col-12">
					{{ form_row(registrationForm.plainPassword, { label: "Mot de passe" }) }}
					<div id="password2Feedback" class="invalid-feedback">
						Veuillez inscrire votre mot de passe ci-dessus (8 caractères minimum).
					</div>
				</div>

                
				<div class="mt-4 col-12">
					<div class="form-check">
						{{ form_row(registrationForm.agreeTerms, { label: "J'accepte les conditions d'utilisation" }) }}
						<div id="invalidCheck3Feedback" class="invalid-feedback">
							Vous devez accepter les conditions d'utilisation avant la création de compte.
						</div>
					</div>
				</div>
				<div class="mt-4 col-12">
					<button type="submit" class="btn btn-success" id="submitForm">Créer le compte</button>
				</div>
				{{ form_end(registrationForm) }}
			

				</div>
				
			</div>
			<div class="dropdown-divider"></div>
		</div>
	</main>
{% endblock %}
