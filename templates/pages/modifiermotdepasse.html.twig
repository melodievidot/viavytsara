{% extends "base.html.twig" %}

{% block title %}Modification du mot de passe de
	{{ app.user.prenom}}
	{{ app.user.nom}}
{% endblock %}
{% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("css/feuille.css")}}">
{% endblock %}
{% block body %}
	<main>
		<div class="container mt-5 mt-lg-5">
			<div class="mt-3 pt-2">
				<h3 class="text-center">🔐 Modification du mot de passe de
					{{ app.user.prenom}}
					{{ app.user.nom}}
					🔐 !</h3>
			</div>
		</div>
		<div class="container mt-5 mt-lg-5">
			<div class="row justify-content-center">
				{% for message in app.flashes('error') %}
					<div class="col-9 col-md-9 col-lg-9">
						<div class="alert alert-danger text-center" role="alert">{{message}}</div>
					</div>
				{% endfor %}
				<form method="post">
					<div class="mb-3">
						<label for="editpassword" class="form-label">Mot de passe :</label>
						<input type="password" class="form-control" name="editpassword" id="editpassword">
					</div>
					<div class="mb-3">
						<label for="editpassword2" class="form-label">Confirmer le mot de passe :</label>
						<input type="password" class="form-control" name="editpassword2" id="editpassword2">
					</div>
					<button type="submit" class="btn btn-primary mt-4">Valider</button>
				</form>
			</div>
		</div>
	</main>
{% endblock %}
