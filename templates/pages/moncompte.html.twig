{% extends "base.html.twig" %}

{% block title %}Mon compte
{% endblock %}

{% block body %}
	<main>
		<div class="container mt-5 mt-lg-5">
		
			<div class="card-header header-profil">
				<h2 class="text-center">Bienvenue dans votre espace personnelles{{ app.user.nom }}üå∏ !</h2>
			</div>
		</div>
		<div class="container mt-5">
			<div class="row justify-content-center">
				<div class="col-9 col-md-9 col-lg-9">
					{% for message in app.flashes('message') %}
						<div class="col-9 col-md-9 col-lg-9 ">
							<div class="alert alert-success text-center" role="alert">{{message}}</div>
						</div>
					{% endfor %}
					<div class="card card-profil-user">
						<div class="card-header header-profil-user">
							<h4 class="modal-title text-center">Informations personnelles</h4>
						</div>
						<div class="card-body body-profil-user">

						<div class="row mt-1">
						<div class="col-md-6">
							        <p><strong>Nom :</strong> {{ app.user.nom }}</p>
						</div>
						<div class="col-md-6">
							        <p><strong>Pr√©nom :</strong> {{ app.user.prenom }}</p>
						</div>
						</div>
						<div class="row mt-3">
						<div class="col-md-6">
							        <p><strong>Email :</strong> {{ app.user.email }}</p>
						</div>
								
						<div class="row row-bouton-profil">
						<div class="mt-4 col-md-6">
									<a href="{{ path('modifiermoncompte', {'id': app.user.id}) }}" class="btn btn-success text-center">Modifier le profil</a>
						</div>
						<div class="mt-4 col-md-6">
									<a href="{{ path('modifiermotdepasse', {'id': app.user.id}) }}" class="btn btn-success text-center">Modifier le mot de passe</a>
						</div>
						</div>
					<div>
					<div>
							{% for message in app.flashes('adresse_message')%}
						<div&times;</span class="alert alert-success alert-dismissible fade show" role="alert" {{message}} </div>
						<button type="button" class="close"data dismiss="alert" area-label="close"> <span area-hidden="true">>
						<button>
						</div>
							{% endfor %}
					<div class="card card-profil-user">
						<div class="card-header header-profil-user">
						<div class="block-adresse" id="adresse">
						<div class="row">
									<h4 class="modal-title text-white text-center">Vos Adresses</h4>
						</div>
						<div class="card-body body-profil-user">
								<div class="col-lg-6">
									<a href="{{path('app_adresse_new')}}" class="btn btn-success mb-3">Ajouter une adresse</a>
						<div>
						</div>
						<div class="row">
							{% if app.user.adresses %}
								{% set index = 0 %}

							{% for 	adresse in app.user.adresses %}
								{% set index = 1 %}
						<div class="col-lg-6">
						<div class="card mb-3 mb-lg-0">
						<div class="card-header">
							<h3>Votre Adresse n¬∞{{index }}</h3>
						</div>
						<div class="card-body">
						<adresse>
							{{adresse.fullname | upper}}<br>
							{{adresse.adresse1}}<br>
							{{adresse.adresse2}}<br>
							{{adresse.complement}}<br>
							{{adresse.ville}}<br>
							{{adresse.codePostal}}<br>
							Tel :{{adresse.telephone}}<br>
							{{adresse.pays}}<br>
						</adresse>
						<div class="btn-group btn-success ">
									<a href="{{path('app_adresse_edit',{'id':adresse.id} ) }}" class="btn btn success mb-3">Modifier une adresse</a>
						{{include('adresse/_delete_form.html.twig')}}
						</div>
						</div>
						</div>
						</div>
						</div>
							{% else %}
								<tr>
								<td colspan="10">Aucune Adresse enregistr√©e</td>
								</tr>
							{% endfor %}
								{% endif %}
						</div>
					<div class="card card-profil-user mt-5">
						<div class="card-header header-profil-user">
							<h4 class="modal-title text-center">Commande(s) effectu√©e(s)</h4>
						</div>
						<div class="card-body body-profil-user">
						<div class="row mt-1">
							<table class="table">
								<thead>
									<tr>
										<th>Produit</th>
										<th>Reference</th>
										<th>Prix</th>
										<th>D√¢te</th>
										</tr>
								</thead>
					<tbody>
							{% for commande in app.user.commandes %}
									<tr>
										<td>
							{% for produitBoutique in commande.produitBoutiques %}
								<div>{{ produitBoutique.titre }}</div>
							{% endfor %}
										</td>
										<td>{{ commande.reference }}</td>
										<td>{{ commande.prix }}</td>
										<td>{{ commande.createdAt ? commande.createdAt|date("d/m/Y H:i") : '' }}</td>
									</tr>
							{% else %}
									<tr>
										<td colspan="5">Aucune Commande trouv√©e</td>
									</tr>
							{% endfor %}
					</tbody>
							</table>
					</div>
					</div>
					</div>
					</div>
					</div>
					</div>
					</div>
					</div>
				</div>
	</main>
			{% endblock %}
